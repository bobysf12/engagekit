# Database path (relative to project root)
DATABASE_PATH=./data/app.db

# Playwright options
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Scraper defaults
SCRAPER_DEFAULT_COOLDOWN_SECONDS=30
SCRAPER_MAX_POSTS_PER_RUN=100
SCRAPER_MAX_COMMENTS_PER_THREAD=50
SCRAPER_ACTION_DELAY_MIN_MS=600
SCRAPER_ACTION_DELAY_MAX_MS=1800

# Run locks
RUN_LOCK_TIMEOUT_SECONDS=3600

# Pipeline feature flags
TRIAGE_ENABLED=false
DEEP_SCRAPE_ENABLED=false
DRAFTS_ENABLED=false
API_ENABLED=false
SCHEDULER_ENABLED=false

# OpenRouter LLM configuration
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Pipeline selection settings
SELECTION_TOP_N=20
SELECTION_SCORE_THRESHOLD=75

# API server
API_PORT=3000
API_HOST=127.0.0.1
